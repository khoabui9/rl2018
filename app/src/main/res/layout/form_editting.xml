<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@color/lavender">

        <Button
            android:id="@+id/back_btn"
            android:layout_width="99dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:background="@null"
            android:drawableLeft="@drawable/arrow_back"
            android:text="Back"
            android:textSize="20dp" />
        <Button
            android:id="@+id/done_edit_btn"
            android:layout_width="99dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_alignParentRight="true"
            android:background="@null"
            android:text="Done"
            android:textSize="20dp"
            android:textColor="@color/red"/>

    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="15px"
        android:padding="2dp">
        <TextView
            android:id="@+id/projectname_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Project's name"
            android:textSize="10pt"
            android:textColor="@color/black">
        </TextView>
        <EditText
            android:id="@+id/projectname_input"
            android:layout_height="wrap_content"
            android:hint="eg.Jarvinen Oy"
            android:inputType="text"
            android:layout_width="fill_parent">
        </EditText>
        <TextView
            android:id="@+id/worksite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Worksite/ Address"
            android:textSize="10pt"
            android:textColor="@color/black">
        </TextView>
        <EditText
            android:id="@+id/worksite_input"
            android:layout_height="wrap_content"
            android:hint="eg.Puistokatu 7 "
            android:inputType="textPostalAddress"
            android:layout_width="fill_parent">
        </EditText>
        <TextView
            android:id="@+id/attendant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Attendants"
            android:textSize="10pt"
            android:textColor="@color/black">
        </TextView>
        <EditText
            android:id="@+id/attendant_input"
            android:layout_height="wrap_content"
            android:hint="Name of attendants "
            android:inputType="textPersonName"
            android:layout_width="fill_parent">
        </EditText>
        <TextView
            android:id="@+id/datetime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date, time"
            android:textSize="10pt"
            android:textColor="@color/black">
        </TextView>
        <EditText
            android:id="@+id/datetime_input"
            android:layout_height="wrap_content"
            android:hint="eg 04.05.2017 13:40"
            android:inputType="datetime"
            android:layout_width="fill_parent">
        </EditText>

    </LinearLayout>

    <ListView
        android:id="@+id/selectedimages_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/add_img_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@null"
        android:padding="5dp"
        android:text="@string/add_images"
        android:textColor="@color/red"
        android:textSize="7pt"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="5dp">

        <Button
            android:id="@+id/save_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:background="@color/black"
            android:drawableLeft="@drawable/save_icon"
            android:paddingHorizontal="2dp"
            android:text="Save"
            android:textColor="@color/white"
            android:textSize="7pt" />

        <Button
            android:id="@+id/share_btn"
            android:layout_width="102dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:background="@color/black"
            android:drawableLeft="@drawable/share_icon"
            android:paddingHorizontal="2dp"
            android:text="Share"
            android:textColor="@color/white"
            android:textSize="7pt" />
    </LinearLayout>
</LinearLayout>
